	//EQ[4] //a1		EQ[5] //a2
	//EQ[6] //b0		EQ[7] //b1		EQ[8] //b2			
	EQ[6] = 1/(1+alpha);
	EQ[7] = -2*cos(omega)/(1+alpha);
