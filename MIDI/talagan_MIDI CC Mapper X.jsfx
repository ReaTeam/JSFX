function gfx_rgb(hex_col) (
  gfx_r = ((hex_col>>16)&0xFF)/255;
  gfx_g = ((hex_col>>8)&0xFF)/255;
  gfx_b = ((hex_col>>0)&0xFF)/255;
);

function gfx_xy(x,y) (
  gfx_x = x;
  gfx_y = y;
);
function pr(x,y) (
  gfx_x = x;
  gfx_y = y;
);
function px(v) (
  (!v)?(gfx_setpixel(gfx_r,gfx_g,gfx_b));
  gfx_x += 1;
);
